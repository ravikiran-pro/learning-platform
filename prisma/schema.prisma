generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String?
  provider  String   @default("credentials")  // <- ADD
  avatar    String?                          // <- ADD
  role      UserRole @default(USER)          // <- ADD
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
